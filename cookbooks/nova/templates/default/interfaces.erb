# The loopback network interface
auto lo
iface lo inet loopback

auto <%= node[:nova][:flat_network_bridge] %>
iface <%= node[:nova][:flat_network_bridge] %> inet static
	bridge_ports  <%= node[:nova][:public_interface] %>
	bridge_stp off
	bridge_maxwait 0
	bridge_fd 0
	address <%= node[:nova][:my_ip] %>
#	netmask <%= node[:network][:interfaces][node[:nova][:public_interface]][:addresses][node[:nova][:my_ip]][:netmask] %>
  netmask 2555.255.255.0
  broadcast <%= node[:network][:interfaces][node[:nova][:public_interface]][:addresses][node[:nova][:my_ip]][:broadcast] %>
	gateway <%= node[:network][:default_gateway] %>
	dns-nameservers $bridge_nameserver
